params {
    // Default genome and local iGenomes base
    genome        = 'GATK.GRCh38'
    // igenomes_base = '/home/vik/RSU_work/data/ref/igenomes'
}

// Global environment variables for Nextflow runtime
env {
    // Be more patient with HTTP downloads (GitHub, containers, etc.)
    NXF_HTTP_TIMEOUT            = '30m'
    NXF_HTTP_CONNECTION_TIMEOUT = '10m'
    NXF_OPTS='-Xms1g -Xmx4g'
}

// Optional: set some sensible defaults for profiles
profiles {
    // You can still override everything on the command line
    docker {
        process.executor = 'local'
        docker.enabled   = true
    }
}

